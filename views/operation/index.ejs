<% layout('layouts/boilerplate') %>
    <h1>All Users</h1>
    <%for(let user of users){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=user.user_image%>" width="200rem" height="200rem" alt="image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title"><%=user.username%> </h3>
                        <p class="card-text">
                            <small class="text-muted"><%=user.user_email%> </small>
                        </p>
                        <a class = "btn btn-primary" href="/users/<%=user._id%> ">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
